---
// src/pages/employees/index.astro
import Layout from "../../layouts/Layout.astro";
import { DashboardLayout } from "../../components/layout/DashboardLayout";
import { EmployeeList } from "../../components/employees/EmployeeList";
import { mockEmployees } from "../../data/mockData";
---

<Layout title="Employee Management - HRIS">
	<DashboardLayout client:load>
		<div class="space-y-6">
			<div>
				<h1 class="text-3xl font-bold text-gray-900">Employee Management</h1>
				<p class="text-gray-600 mt-2">Manage your organization's workforce efficiently.</p>
			</div>

			<EmployeeList employees={mockEmployees} client:load />
		</div>
	</DashboardLayout>
</Layout>
